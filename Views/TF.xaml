        <wpf:Valve Component="vTFBypass" Canvas.Right="26" Canvas.Top="30" d:ValveState="Closed" />
        <wpf:Valve Component="vTF_IP1" Canvas.Right="0" Canvas.Top="56" d:ValveState="Closed" />
